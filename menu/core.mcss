// Component:       `m-menu`
// ========================================================================

.m-menu {
    > li {
        position: relative;

        > a, > span {
            display: block;
            color: inherit;
            text-decoration: none;
        }

        > .m-menu {
            display: none;
            position: absolute;
            left: 100%;
            top: 0;
        }
    }

    > li:hover:not(.z-dis) > .m-menu {
        display: block;
    }
}
